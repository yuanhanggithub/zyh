<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:background="@color/black"
    android:focusable="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_eshare_time"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/eashre_time"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:textColor="@color/color_app"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_eshare_wifi"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/eshare_wifi"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:text="mirror_magic"
            android:textColor="@color/color_app"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.3"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_eshare_tv"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/eshare_tv"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:text="sdfgsdfg"
            android:textColor="@color/color_app"
            android:textSize="30dp" />

    </LinearLayout>

</LinearLayout>

