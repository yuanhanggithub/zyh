<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/icon_main_title" />

    <RelativeLayout
        android:id="@+id/rela_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/video_fragment_bgg">

        <ImageView
            android:id="@+id/iv_video_animal"
            android:layout_width="6dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:background="@color/color_app" />

        <GridView
            android:id="@+id/grid_title_video"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginLeft="450dp"
            android:listSelector="@color/transparent"
            android:nextFocusDown="@+id/recyview_video_content"
            android:scrollbars="none" />

        <GridView
            android:id="@+id/grid_video_fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/grid_title_video"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/dimen_55"
            android:layout_marginTop="20dp"
            android:listSelector="@color/transparent"
            android:nextFocusUp="@id/grid_title_video"
            android:paddingBottom="15dp"
            android:scrollbars="none" />
    </RelativeLayout>
</RelativeLayout>
