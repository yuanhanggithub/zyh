<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@drawable/rect_circle"
        android:layout_width="500.0dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:textSize="20.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/tv_hour1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择时间"
            >
        </TextView>
        <View
            android:textColor="@drawable/white_radius"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/tv_hour1"
            >
        </View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                >
                <Button
                    android:textSize="20.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_hour_add"
                    android:background="@drawable/btn_fouces_style"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:text="+"
                    android:layout_weight="1.0"
                    >
                </Button>
                <Button
                    android:textSize="20.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_min_add"
                    android:background="@drawable/btn_fouces_style"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="10dp"
                    android:text="+"
                    android:layout_weight="1.0"
                    >
                </Button>
            </LinearLayout>
            <View
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                >
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="20.0sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:id="@+id/tv_hour"
                    android:focusable="false"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:text="9"
                    android:layout_weight="1.0"
                    >
                </TextView>
                <TextView
                    android:textSize="20.0sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:text=":"
                    >
                </TextView>
                <TextView
                    android:textSize="20.0sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:id="@+id/tv_min"
                    android:focusable="false"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:text="30"
                    android:layout_weight="1.0"
                    >
                </TextView>
            </LinearLayout>
            <View
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                >
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                >
                <Button
                    android:textSize="20.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_reduce_hour"
                    android:background="@drawable/btn_fouces_style"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:text="-"
                    android:layout_weight="1.0"
                    >
                </Button>
                <Button
                    android:textSize="20.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_reduce_min"
                    android:background="@drawable/btn_fouces_style"
                    android:layout_width="0.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="10dip"
                    android:text="-"
                    android:layout_weight="1.0"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:textSize="18.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_ok"
                android:background="@drawable/btn_fouces_style"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_weight="1.0"
                >
            </Button>
            <Button
                android:textSize="18.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_cacel"
                android:background="@drawable/btn_fouces_style"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="取消"
                android:layout_weight="1.0"
                >
            </Button>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
